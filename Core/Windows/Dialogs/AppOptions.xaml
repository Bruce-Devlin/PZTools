<Window x:Class="PZTools.Core.Windows.Dialogs.AppOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PZTools.Core.Models.View"
        mc:Ignorable="d"
        Title="Settings"
        Width="900"
        Height="600"
        MinWidth="740"
        MinHeight="460"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource Brush.BgApp}"
        Foreground="{StaticResource Brush.TextPrimary}">

    <Window.DataContext>
        <vm:AppOptionsViewModel/>
    </Window.DataContext>

    <Window.Resources>

        <!-- Page templates: add a new DataTemplate for each new page VM type -->
        <DataTemplate DataType="{x:Type vm:GeneralSettingsPageViewModel}">
            <StackPanel Margin="0,0,0,0">
                <TextBlock Text="General" Style="{StaticResource Text.Title}"/>

                <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="App theme"
                                   Opacity="0.85" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="0" Grid.Column="1"
                                  Style="{StaticResource ModernComboBox}"
                                  ItemsSource="{Binding ThemeOptions}"
                                  SelectedItem="{Binding Settings.Theme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Confirm on exit"
                                   Opacity="0.85" VerticalAlignment="Center" Margin="0,10,0,0"/>
                        <CheckBox Grid.Row="3" Grid.Column="1" Margin="0,10,0,0"
                                  Style="{StaticResource ModernCheckBox}"
                                  Content="Ask before closing the app"
                                  IsChecked="{Binding Settings.ConfirmOnExit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Notes" Opacity="0.85"/>
                        <TextBlock Style="{StaticResource Text.Muted}"
                                   Text="Settings are applied immediately. Use Apply if you want to force-save without closing."
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SystemSettingsPageViewModel}">
            <StackPanel Margin="0,0,0,0">
                <TextBlock Text="System" Style="{StaticResource Text.Title}"/>

                <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="App Install Path"
                           Opacity="0.85" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" IsReadOnly="True" Grid.Column="1"
                          Style="{StaticResource ModernTextBox}"
                          Text="{Binding Settings.AppInstallPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Game Management Mode"
                           Opacity="0.85" VerticalAlignment="Center" Margin="0,10,0,0"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Margin="0,10,0,0"
                          Style="{StaticResource ModernComboBox}"
                          ItemsSource="{Binding GameModeOptions}"
                          SelectedItem="{Binding Settings.GameMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Exisitng Game Install Path"
                           Opacity="0.85" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" IsReadOnly="True" Grid.Column="1"
                          Style="{StaticResource ModernTextBox}"
                          Text="{Binding Settings.ExistingGamePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Managed Game Install Path"
                           Opacity="0.85" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" IsReadOnly="True" Grid.Column="1"
                          Style="{StaticResource ModernTextBox}"
                          Text="{Binding Settings.ManagedGamePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Notes" Opacity="0.85"/>
                        <TextBlock Style="{StaticResource Text.Muted}"
                           Text="Settings are applied immediately. Use Apply if you want to force-save without closing."
                           Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EditorSettingsPageViewModel}">
            <StackPanel>
                <TextBlock Text="Editor" Style="{StaticResource Text.Title}"/>

                <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Font size"
                                   Opacity="0.85" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Style="{StaticResource ModernTextBox}"
                                 Text="{Binding Settings.EditorFontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Tab size"
                                   Opacity="0.85" VerticalAlignment="Center" Margin="0,10,0,0"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,10,0,0"
                                 Style="{StaticResource ModernTextBox}"
                                 Text="{Binding Settings.EditorTabSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Word wrap"
                                   Opacity="0.85" VerticalAlignment="Center" Margin="0,10,0,0"/>
                        <CheckBox Grid.Row="2" Grid.Column="1" Margin="0,10,0,0"
                                  Style="{StaticResource ModernCheckBox}"
                                  Content="Enable word wrap"
                                  IsChecked="{Binding Settings.EditorWordWrap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Auto-reload open file"
                                   Opacity="0.85" VerticalAlignment="Center" Margin="0,10,0,0"/>
                        <CheckBox Grid.Row="3" Grid.Column="1" Margin="0,10,0,0"
                                  Style="{StaticResource ModernCheckBox}"
                                  Content="Reload when file changes on disk"
                                  IsChecked="{Binding Settings.EditorAutoReloadOpenFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Tip" Opacity="0.85"/>
                        <TextBlock Style="{StaticResource Text.Muted}"
                                   Text="If you enable auto-reload, consider handling merge prompts when there are unsaved edits."
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:UpdatesSettingsPageViewModel}">
            <StackPanel>
                <TextBlock Text="Updates" Style="{StaticResource Text.Title}"/>

                <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Check for updates"
                                   Opacity="0.85" VerticalAlignment="Center"/>
                        <CheckBox Grid.Row="0" Grid.Column="1"
                                  Style="{StaticResource ModernCheckBox}"
                                  Content="Check on startup"
                                  IsChecked="{Binding Settings.CheckUpdatesOnStartup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Update channel"
                                   Opacity="0.85" VerticalAlignment="Center" Margin="0,10,0,0"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Margin="0,10,0,0"
                                  Style="{StaticResource ModernComboBox}"
                                  ItemsSource="{Binding ChannelOptions}"
                                  SelectedItem="{Binding Settings.UpdateChannel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Last check"
                                   Opacity="0.85" VerticalAlignment="Center" Margin="0,10,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Margin="0,10,0,0"
                                   Text="{Binding Settings.LastUpdateCheckUtc}"
                                   Opacity="0.75"/>
                    </Grid>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Style="{StaticResource ModernButton}"
                            Content="Check now"
                            Command="{Binding CheckNowCommand}"
                            Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding StatusText}" Opacity="0.75" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <!-- Left-nav item style -->
        <Style x:Key="SettingsNavItem" TargetType="ListBoxItem" BasedOn="{StaticResource ModernListBoxItem}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="10,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Description}" Opacity="0.7" Margin="0,4,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                                
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource Brush.BgControlHover}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource Brush.Accent}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="14"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource Card}" Padding="14" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Settings" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="(this does nothing yet) Configure PZ Tools behavior and defaults." Opacity="0.7" Margin="0,4,0,0"/>
                </StackPanel>

                <TextBox Grid.Column="1"
                         Style="{StaticResource ModernTextBox}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center">
                    <TextBox.ToolTip>
                        <ToolTip Style="{StaticResource ModernToolTip}">
                            <TextBlock Text="Filter settings pages by title/description."/>
                        </ToolTip>
                    </TextBox.ToolTip>
                </TextBox>
            </Grid>
        </Border>

        <!-- Left: Pages -->
        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Categories" Opacity="0.75" Margin="0,0,0,10"/>
                <ListBox Grid.Row="1"
                         Style="{StaticResource ModernListBox}"
                         ItemContainerStyle="{StaticResource SettingsNavItem}"
                         ItemsSource="{Binding FilteredPages}"
                         SelectedItem="{Binding SelectedPage, Mode=TwoWay}">
                    <ListBox.BorderThickness>0</ListBox.BorderThickness>
                </ListBox>
            </Grid>
        </Border>

        <!-- Right: Active page -->
        <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource Card}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ContentControl Content="{Binding SelectedPage}"/>
            </ScrollViewer>
        </Border>

        <!-- Footer buttons -->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Style="{StaticResource Card}" Padding="12" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding FooterText}" Opacity="0.7" VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Style="{StaticResource ModernButton}"
                        Content="Reset"
                        Command="{Binding ResetCommand}"
                        Margin="0,0,10,0"/>

                <Button Grid.Column="2"
                        Style="{StaticResource ModernButton}"
                        Content="Apply"
                        Command="{Binding ApplyCommand}"
                        Margin="0,0,10,0"/>

                <Button Grid.Column="3"
                        Style="{StaticResource PrimaryButton}"
                        Content="Close"
                        Command="{Binding CloseCommand}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
