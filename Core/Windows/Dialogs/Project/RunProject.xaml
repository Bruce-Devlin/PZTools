<Window x:Class="PZTools.Core.Windows.Dialogs.Project.RunProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZTools.Core.Windows.Dialogs.Project"
        mc:Ignorable="d"
        Title="Run Project Zomboid" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Version Selection -->
            <RowDefinition Height="Auto"/>
            <!-- Launch Args -->
            <RowDefinition Height="*"/>
            <!-- Output Log -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Version Selection -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
            <TextBlock Text="Select Build:" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
            <ComboBox x:Name="cmbBuilds" Width="300"/>
        </StackPanel>

        <!-- Optional Launch Arguments -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Optional Launch Arguments:" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLaunchArgs" Width="600" Background="#2D2D30" Foreground="White" BorderBrush="#3E3E42"/>
        </StackPanel>

        <!-- Output Log -->
        <GroupBox Grid.Row="2" Header="Game Output" Foreground="White" Background="#2D2D30" BorderBrush="#3E3E42">
            <TextBox x:Name="txtOutputLog" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                     Background="#1E1E1E" Foreground="LightGreen" FontFamily="Consolas"/>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnLaunch" Content="Launch" Width="100" Margin="0,0,10,0" Click="BtnLaunch_Click"
                    Background="#007ACC" Foreground="White"/>
            <Button x:Name="btnClose" Content="Close" Width="100" Click="BtnClose_Click"
                    Background="#3E3E42" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
