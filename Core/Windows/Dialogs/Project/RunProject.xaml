<Window x:Class="PZTools.Core.Windows.Dialogs.Project.RunProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZTools.Core.Windows.Dialogs.Project"
        mc:Ignorable="d"
        Title="Run Project Zomboid"
        Height="615"
        Width="850"
        WindowStartupLocation="CenterScreen"
        Background="{x:Null}"
        Foreground="{StaticResource Brush.TextPrimary}"
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True">

    <Grid Margin="18">
        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Version Selection -->
                    <RowDefinition Height="Auto"/>
                    <!-- Launch Args -->
                    <RowDefinition Height="*"/>
                    <!-- Output Log -->
                    <RowDefinition Height="Auto"/>
                    <!-- Buttons -->
                    <RowDefinition Height="2"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="Run Project Zomboid"
                           Style="{StaticResource Text.Title}"
                           FontSize="18"
                           Margin="0,0,0,12"/>

                <!-- Version Selection -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Margin="0,0,0,12"
                            VerticalAlignment="Center">
                    <TextBlock Text="Select Build:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               Foreground="{StaticResource Brush.TextPrimary}"/>

                    <!-- Uses default ComboBox style unless you add a themed one -->
                    <ComboBox x:Name="cmbBuilds" Style="{StaticResource ModernComboBox}">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem" BasedOn="{StaticResource ModernComboBoxItem}"/>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>

                </StackPanel>

                <!-- Optional Launch Arguments -->
                <StackPanel Grid.Row="2" Margin="0,0,0,12">
                    <TextBlock Text="Optional Launch Arguments:"
                               Foreground="{StaticResource Brush.TextPrimary}"
                               Margin="0,0,0,6"/>

                    <TextBox x:Name="txtLaunchArgs"
                             Style="{StaticResource ModernTextBox}"
                             MinWidth="600"/>
                </StackPanel>

                <!-- Output Log -->
                <Grid Grid.Row="3" Margin="0,0,0,12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Game Output"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Brush.TextPrimary}"
                               Margin="0,0,0,8"/>

                    <Border Grid.Row="1"
                            Background="{StaticResource Brush.BgApp}"
                            BorderBrush="{StaticResource Brush.Border}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10"
                            MinHeight="240">

                        <TextBox x:Name="txtOutputLog"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="Transparent"
                                 Foreground="{StaticResource Brush.TextInfo}"
                                 FontFamily="Consolas"
                                 BorderThickness="0"/>
                    </Border>
                </Grid>

                <Border Grid.Row="4"
                        Background="{StaticResource Brush.Border}"
                        Height="1"
                        VerticalAlignment="Top"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="5"
                            Orientation="Horizontal"
                            HorizontalAlignment="rIGHT">

                    <Button x:Name="btnClose"
                            Content="Close"
                            Width="110"
                            Margin="0,0,10,0"
                            Style="{StaticResource ModernButton}"
                            IsCancel="True"
                            Click="BtnClose_Click"/>

                    <Button x:Name="btnStopGame"
                        Content="Stop Game"
                        Width="110"
                            Margin="0,0,10,0"
                        Style="{StaticResource PrimaryButton}"
                        IsDefault="True"
                        Click="btnStopGame_Click"
                        IsEnabled="False" />

                    <Button x:Name="btnLaunch"
                            Content="Launch"
                            Width="110"
                            Style="{StaticResource PrimaryButton}"
                            IsDefault="True"
                            Click="BtnLaunch_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
