<Window x:Class="PZTools.Core.Windows.Dialogs.Project.ProjectSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZTools.Core.Windows.Dialogs.Project"
        mc:Ignorable="d"
        Title="Project Settings"
        Height="720"
        MinHeight="720"
        Width="955"
        MinWidth="955"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{x:Null}"
        Foreground="{StaticResource Brush.TextPrimary}" WindowStyle="None" AllowsTransparency="True">

    <Grid Margin="18">
        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="Project Settings"
                           Style="{StaticResource Text.Title}"
                           FontSize="20"
                           Margin="0,0,0,12"/>

                <!-- Main Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel: Project Info -->
                    <StackPanel Grid.Column="0" Margin="0,0,16,0">

                        <TextBlock Text="Name:" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBox x:Name="txtModName"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="ID:" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBox x:Name="txtModID"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Description:" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBox x:Name="txtDescription"
                                 Style="{StaticResource ModernTextBox}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="150"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Lua Watermark:" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBox x:Name="txtWatermark"
                                 Style="{StaticResource ModernTextBox}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="150"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,6"/>

                        <TextBlock Text="(this can be applied to files via Tools &gt; Lua Watermark)"
                                   Style="{StaticResource Text.Muted}"
                                   Margin="0,0,0,0"/>
                    </StackPanel>

                    <!-- Right Panel: Poster Preview -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">

                        <TextBlock Text="Poster:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>

                        <Border Background="{StaticResource Brush.BgApp}"
                                BorderBrush="{StaticResource Brush.Border}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Width="200"
                                Height="300"
                                Padding="8">
                            <Image x:Name="imgPoster" Stretch="Uniform"/>
                        </Border>

                        <Button Content="Change Poster..."
                                Width="160"
                                Margin="0,12,0,0"
                                Style="{StaticResource ModernButton}"
                                Click="ChangePoster_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Divider -->
                <Border Grid.Row="2"
                        Background="{StaticResource Brush.Border}"
                        Height="1"
                        VerticalAlignment="Top"
                        Margin="0,12,0,0"/>

                <!-- Buttons (overlayed in same row for simple layout) -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,24,0,0">

                    <Button Content="Cancel"
                            Width="110"
                            Margin="0,0,10,0"
                            Style="{StaticResource ModernButton}"
                            IsCancel="True"
                            Click="CancelButton_Click"/>

                    <Button Content="Save"
                            Width="110"
                            Style="{StaticResource PrimaryButton}"
                            IsDefault="True"
                            Click="SaveButton_Click"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
