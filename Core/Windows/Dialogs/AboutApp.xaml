<Window x:Class="PZTools.Core.Windows.Dialogs.AboutApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZTools.Core.Windows.Dialogs"
        mc:Ignorable="d"
        Title="About PZ Tools"
        Height="545"
        Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{x:Null}"
        Foreground="{StaticResource Brush.TextPrimary}" WindowStyle="None" AllowsTransparency="True">

    <Grid Margin="18">
        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="PZ Tools"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Brush.TextPrimary}"/>

                    <TextBlock Text="Project Zomboid Modding Toolkit"
                               Style="{StaticResource Text.Muted}"
                               FontSize="14"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Content -->
                <StackPanel Grid.Row="1" Margin="0,0,0,12">

                    <TextBlock Text="Version"
                               Foreground="{StaticResource Brush.TextMuted}"
                               FontWeight="Bold"/>

                    <!-- If you prefer true accent here, swap Brush.TextInfo -> Brush.Accent -->
                    <TextBlock Text="1.0.0"
                               Foreground="{StaticResource Brush.TextInfo}"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Description"
                               Foreground="{StaticResource Brush.TextMuted}"
                               FontWeight="Bold"/>

                    <TextBlock Text="PZ Tools is a lightweight development environment designed to simplify Project Zomboid project creation, testing, and file management."
                               Foreground="{StaticResource Brush.TextPrimary}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Developer"
                               Foreground="{StaticResource Brush.TextMuted}"
                               FontWeight="Bold"/>

                    <TextBlock Text="Bruce Devlin"
                               Foreground="{StaticResource Brush.TextPrimary}"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Tech Stack"
                               Foreground="{StaticResource Brush.TextMuted}"
                               FontWeight="Bold"/>

                    <TextBlock Text="C# • WPF • AvalonEdit • Lua/MoonSharp • .NET"
                               Foreground="{StaticResource Brush.TextPrimary}" 
                               Margin="0,0,0,12"/>

                    <TextBlock Text="The Legal Bit"
                               Foreground="{StaticResource Brush.TextMuted}"
                               FontWeight="Bold"/>
                    
                    <TextBlock Text="This application is an independent, unofficial, third-party project and is not affiliated with, endorsed by, or sponsored by The Indie Stone. Project Zomboid, The Indie Stone, and all related names, logos, assets, and trademarks are the property of their respective owners. All rights are reserved. Any references to Project Zomboid or related content are used solely for identification and compatibility purposes. No ownership or association is claimed or implied."
                               Foreground="{StaticResource Brush.TextPrimary}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>

                </StackPanel>

                <Border Grid.Row="4"
                        Background="{StaticResource Brush.Border}"
                        Height="1"
                        VerticalAlignment="Top"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,12,0,0">

                    <Button Content="GitHub"
                            Width="110"
                            Margin="0,0,10,0"
                            Style="{StaticResource ModernButton}"
                            Click="GitHub_Click"/>

                    <Button Content="Close"
                            Width="110"
                            Style="{StaticResource PrimaryButton}"
                            IsCancel="True"
                            Click="Close_Click"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
