<Window x:Class="PZTools.Core.Windows.Dialogs.AboutApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZTools.Core.Windows.Dialogs"
        mc:Ignorable="d"
        Title="About PZ Tools"
        Height="420"
        Width="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0F1117">

    <Window.Resources>
        <SolidColorBrush x:Key="BgPanel" Color="#161A23"/>
        <SolidColorBrush x:Key="BorderSoft" Color="#2A2F3A"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E6EDF3"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9AA4B2"/>
        <SolidColorBrush x:Key="Accent" Color="#4FC1FF"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#1E2633"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#273248"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1B2230"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BgPanel}"
            BorderBrush="{StaticResource BorderSoft}"
            BorderThickness="1"
            CornerRadius="10"
            Padding="24"
            Margin="16">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,18">
                <TextBlock Text="PZ Tools"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}"/>

                <TextBlock Text="Project Zomboid Modding Toolkit"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondary}"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="0,0,0,12">

                <TextBlock Text="Version"
                           Foreground="{StaticResource TextSecondary}"
                           FontWeight="SemiBold"/>

                <TextBlock Text="1.0.0"
                           Foreground="{StaticResource Accent}"
                           Margin="0,0,0,12"/>

                <TextBlock Text="Description"
                           Foreground="{StaticResource TextSecondary}"
                           FontWeight="SemiBold"/>

                <TextBlock Text="PZ Tools is a lightweight development environment designed to simplify Project Zomboid mod creation, testing, and file management."
                           Foreground="{StaticResource TextPrimary}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,12"/>

                <TextBlock Text="Developer"
                           Foreground="{StaticResource TextSecondary}"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Bruce Devlin"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,12"/>

                <TextBlock Text="Technologies"
                           Foreground="{StaticResource TextSecondary}"
                           FontWeight="SemiBold"/>

                <TextBlock Text="C# • WPF • AvalonEdit • Lua"
                           Foreground="{StaticResource TextPrimary}"/>

            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Content="GitHub" Click="GitHub_Click"/>
                <Button Content="Close" Click="Close_Click"/>

            </StackPanel>

        </Grid>

    </Border>
</Window>
