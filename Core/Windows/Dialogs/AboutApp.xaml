<Window x:Class="PZTools.Core.Windows.Dialogs.AboutApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZTools.Core.Windows.Dialogs"
        mc:Ignorable="d"
        Title="About PZ Tools"
        Height="545"
        Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{x:Null}"
        Foreground="{DynamicResource Brush.TextPrimary}" WindowStyle="None" AllowsTransparency="True"
        Icon="/Core/Assets/Icons/PZToolsIcon.png">

    <Grid Margin="18">
        <Border Style="{DynamicResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="PZ Tools"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource Brush.TextPrimary}"/>

                    <TextBlock Text="Project Zomboid Modding Toolkit"
                               Style="{DynamicResource Text.Muted}"
                               FontSize="14"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Content -->
                <StackPanel Grid.Row="1" Margin="0,0,0,12">

                    <TextBlock Text="Version"
                               Foreground="{DynamicResource Brush.TextMuted}"
                               FontWeight="Bold"/>

                    <!-- If you prefer true accent here, swap Brush.TextInfo -> Brush.Accent -->
                    <TextBlock Text="1.0.0"
                               Foreground="{DynamicResource Brush.TextInfo}"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Description"
                               Foreground="{DynamicResource Brush.TextMuted}"
                               FontWeight="Bold"/>

                    <TextBlock Text="PZ Tools is a lightweight development environment designed to simplify Project Zomboid project creation, testing, and file management."
                               Foreground="{DynamicResource Brush.TextPrimary}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>
                    <TextBlock Text="As a big fan of Project Zomoid and a game modder, I thought traditional IDE's lacked a lot of the robust support needed for Project Zomboid modding, especially for people looking to learn. Enter PZTools, an app with everything you need at your finger-tips!"
                               Foreground="{DynamicResource Brush.TextPrimary}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Developer"
                               Foreground="{DynamicResource Brush.TextMuted}"
                               FontWeight="Bold"/>

                    <TextBlock Text="Bruce Devlin"
                               Foreground="{DynamicResource Brush.TextPrimary}"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Tech Stack"
                               Foreground="{DynamicResource Brush.TextMuted}"
                               FontWeight="Bold"/>

                    <TextBlock Text="C# • WPF • AvalonEdit • Lua/MoonSharp • .NET"
                               Foreground="{DynamicResource Brush.TextPrimary}" 
                               Margin="0,0,0,12"/>

                    <TextBlock Text="The Legal Bit"
                               Foreground="{DynamicResource Brush.TextMuted}"
                               FontWeight="Bold"/>
                    
                    <TextBlock Text="This application is an independent, unofficial, third-party fan project and is not affiliated with, endorsed by, or sponsored by The Indie Stone. Project Zomboid, The Indie Stone, and all related names, logos, assets, and trademarks are the property of their respective owners. All rights are reserved. Any references to Project Zomboid or related content are used solely for identification and compatibility purposes. No ownership or association is claimed or implied. This project will always be free and open source."
                               Foreground="{DynamicResource Brush.TextPrimary}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>

                </StackPanel>

                <Border Grid.Row="4"
                        Background="{DynamicResource Brush.Border}"
                        Height="1"
                        VerticalAlignment="Top"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,12,0,0">

                    <Button Content="GitHub"
                            Width="110"
                            Margin="0,0,10,0"
                            Style="{DynamicResource ModernButton}"
                            Click="GitHub_Click"/>

                    <Button Content="Close"
                            Width="110"
                            Style="{DynamicResource PrimaryButton}"
                            IsCancel="True"
                            Click="Close_Click"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
