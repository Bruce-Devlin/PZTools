<Window x:Class="PZTools.Core.Windows.Dialogs.SteamLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam Login"
        Height="225"
        Width="430"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Steam Login"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1">

            <TextBlock Text="Steam Username"
                       Foreground="White"/>

            <TextBox x:Name="TxtUsername"
                     Margin="0,8,0,0"
                     Background="#2D2D30"
                     Foreground="White"/>

            <TextBlock Text="Password and Steam Guard will be requested in SteamCMD."
                       Foreground="LightGray"
                       FontSize="11"
                       Margin="0,8,0,0"
                       TextWrapping="Wrap"/>

        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">

            <Button Content="Cancel"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="Cancel_Click"/>

            <Button Content="Continue"
                    Width="80"
                    Background="#007ACC"
                    Foreground="White"
                    Click="Continue_Click"/>

        </StackPanel>
    </Grid>
</Window>
