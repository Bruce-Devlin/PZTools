<Window x:Class="PZTools.Core.Windows.Dialogs.SteamLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam Login"
        Height="260"
        Width="455"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Foreground="{StaticResource Brush.TextPrimary}" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}">

    <Grid Margin="18">
        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="Steam Login"
                           Style="{StaticResource Text.Title}"
                           FontSize="18"
                           Margin="0,0,0,12"/>

                <!-- Content -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="Steam Username"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Brush.TextPrimary}"/>

                    <TextBox x:Name="TxtUsername"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,8,0,0"/>

                    <TextBlock Text="Password and Steam Guard will be requested in SteamCMD."
                               Style="{StaticResource Text.Muted}"
                               FontSize="11"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <Border Grid.Row="2"
                        Background="{StaticResource Brush.Border}"
                        Height="1"
                        VerticalAlignment="Top"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,14,0,0">

                    <Button Content="Cancel"
                            Width="100"
                            Margin="0,0,10,0"
                            Style="{StaticResource ModernButton}"
                            Click="Cancel_Click"/>

                    <Button Content="Continue"
                            Width="100"
                            Style="{StaticResource PrimaryButton}"
                            Click="Continue_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
