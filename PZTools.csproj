<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <AssemblyName>PZTools</AssemblyName>
    <RootNamespace>PZTools</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>True</UseWindowsForms>
    <Title>PZTools</Title>
    <ApplicationIcon>Core\Assets\Icons\PZToolsIcon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Core\Assets\PZTools.png" />
    <None Remove="Core\Assets\PZToolsIcon.ico" />
    <None Remove="Resources\PZLua.xshd" />
  </ItemGroup>

  <ItemGroup>
    <COMReference Include="IWshRuntimeLibrary">
      <WrapperTool>tlbimp</WrapperTool>
      <VersionMinor>0</VersionMinor>
      <VersionMajor>1</VersionMajor>
      <Guid>f935dc20-1cf0-11d0-adb9-00c04fd58a0b</Guid>
      <Lcid>0</Lcid>
      <Isolated>false</Isolated>
      <EmbedInteropTypes>true</EmbedInteropTypes>
    </COMReference>
  </ItemGroup>

  <ItemGroup>
    <Content Include="Core\Assets\Icons\PZToolsIcon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AvalonEdit" Version="6.3.1.120" />
    <PackageReference Include="MoonSharp" Version="2.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.5-beta1" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Core\Assets\Icons\PZToolsIcon.ico" />
    <Resource Include="Core\Assets\Icons\PZToolsIcon.png" />
    <Resource Include="Core\Assets\PZTools.png" />
    <EmbeddedResource Include="Resources\PZinfo.xshd" />
    <EmbeddedResource Include="Resources\PZtxt.xshd" />
    <EmbeddedResource Include="Resources\PZlua.xshd" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Generator>MSBuild:Compile</Generator>
    </None>
  </ItemGroup>

</Project>
